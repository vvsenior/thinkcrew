{
  "extends": "eslint:recommended",
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-unused-vars": "off",
    "semi": [
      "error",
      "never"
    ]
  },
  "ignorePatterns": [
    "dist"
  ]
}